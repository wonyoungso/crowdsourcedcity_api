
<div class="l-apple-box"></div>

<h3> 
  All Scanners
</h3>

<div class="l-apple-box"></div>
<table class="table table-striped">
  <tr>
    <th>
      #
    </th>
    <th>
      Scanner Name
    </th>
    <th>
      Location
    </th>
    <th>
      Last update
    </th>
    <th>
      IP
    </th>
    <th>
      Edit
    </th>
    <th>
      Delete
    </th>
  </tr>
  <% @scanners.each do |s| %> 
    <tr>
      <td>
        <%= s.id %>
      </td>

      <td>
        <%= s.device_id %>
      </td>

      <td>
        [<%= s.pos_x %>, <%= s.pos_y %>]
      </td>
      <td>
        <%= s.updated_at.in_time_zone("Eastern Time (US & Canada)").strftime("%Y-%m-%d %H:%M:%S") %>
      </td>
      <th>
        <%= s.ip_address %>
      </th>
      <td>
        <%= link_to  "Edit", edit_admin_scanner_path(s) %>
      </td>

      <td>
        <%= link_to  "Delete", admin_scanner_path(s), method: :delete %>
      </td>
    </tr>
  <% end %>
</table>

<%= will_paginate @scanners, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer  %>